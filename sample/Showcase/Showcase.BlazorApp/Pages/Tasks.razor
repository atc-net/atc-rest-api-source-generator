@page "/tasks"

<PageTitle>Tasks</PageTitle>

<MudText Typo="Typo.h4" Class="mb-4">Tasks</MudText>

<MudGrid>
    <MudItem xs="12" md="6">
        <MudCard Elevation="2" Class="mb-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Create Task</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudTextField @bind-Value="newTaskName" Label="Name" Variant="Variant.Outlined" Class="mb-2" />
                <MudTextField @bind-Value="newTaskTag" Label="Tag (optional)" Variant="Variant.Outlined" />
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="CreateTaskAsync" Disabled="isLoading">
                    @if (isLoading)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                    }
                    Create
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="12" md="6">
        <MudCard Elevation="2" Class="mb-4">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">Load Options</MudText>
                </CardHeaderContent>
            </MudCardHeader>
            <MudCardContent>
                <MudNumericField @bind-Value="limit" Label="Limit (optional)" Variant="Variant.Outlined" Min="1" Max="100" />
            </MudCardContent>
            <MudCardActions>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="LoadTasksAsync" Disabled="isLoading">
                    @if (isLoading)
                    {
                        <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                    }
                    Load Tasks
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>

<MudTable Items="tasks" Hover="true" Striped="true" Loading="isLoading" LoadingProgressColor="Color.Primary">
    <HeaderContent>
        <MudTh>ID</MudTh>
        <MudTh>Name</MudTh>
        <MudTh>Tag</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="ID">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Tag">@context.Tag</MudTd>
        <MudTd>
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small"
                           OnClick="() => DeleteTaskAsync(context.Id.ToString())" />
        </MudTd>
    </RowTemplate>
    <NoRecordsContent>
        <MudText>No tasks found. Click "Load Tasks" to fetch data.</MudText>
    </NoRecordsContent>
</MudTable>